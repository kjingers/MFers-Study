# Auto detect text files and perform LF normalization
* text=auto

# JavaScript and TypeScript
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf

# Web
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.json text eol=lf
*.jsonc text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Configuration
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.xml text eol=lf
*.env text eol=lf
*.env.* text eol=lf

# Shell scripts
*.sh text eol=lf

# Lock files
package-lock.json text eol=lf -diff

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary
*.zip binary
